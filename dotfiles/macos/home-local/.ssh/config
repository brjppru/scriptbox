# IMPORTANT: Keep Include blocks above Host *. -> OpenSSH uses first-value-wins semantics for most options.

Include ~/.ssh/ssh.brjed
Include ~/.ssh/ssh.brj.homelab
Include ~/.ssh/ssh.brj.mslab
Include ~/.ssh/ssh.cl

Host *
	Port 22
	ForwardAgent no
	ForwardX11 no
	ServerAliveInterval 60
	ServerAliveCountMax 30
	Compression No
	SendEnv LANG LC_*
	HashKnownHosts no
	StrictHostKeyChecking no
	UserKnownHostsFile /dev/null
	SetEnv TERM=xterm-256color
#	ControlPath ~/.ssh/ssh-mux-%r@%h:%p
	ControlPath ~/.ssh/mux-%C
	ControlMaster auto
	ControlPersist 30m
	IdentitiesOnly yes
	PubkeyAuthentication yes
